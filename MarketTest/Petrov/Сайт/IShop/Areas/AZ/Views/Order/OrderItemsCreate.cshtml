@model OrderItem
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="ModalLabel">@Model.ToString()</h4>
        </div>
        @Html.Hidden("UrlOrderTypeOptions", Url.Action("OrderTypeOptions"))
        @using (Html.BeginForm())
        {
            <div class="modal-body">
                @Html.Hidden("ModelStateErrors", ViewData.ModelState.Values.Select(v => v.Errors.Count).Sum())
                @Html.ValidationSummary()
                @Html.AntiForgeryToken()
                @Html.EditorForModel()
                <div class="form-group">
                    <label for="ProductOptionList">Опции товара</label>
                    <select class="form-control input-sm valid" id="ProductOptionList" name="ProductOptionList" aria-invalid="false" multiple="multiple">
                        @Html.Partial("OrderTypeOptions", Model.ProductOptionDictionary)
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-mb">Сохранить</button>
                <button type="button" class="btn btn-mb" data-dismiss="modal">Закрыть</button>
            </div>
        }
    </div>
</div>