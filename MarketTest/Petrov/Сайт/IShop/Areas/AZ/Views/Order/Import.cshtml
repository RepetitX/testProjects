@model ImportViewModel

@{
    Layout = null;
}

<div class="modal-dialog modal-update-grid">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="ModalLabel">Импорт участников</h4>
        </div>
        @using (Html.BeginForm())
        {
            <div class="modal-body">
                <div class="alert alert-warning" role="alert">Импорт большого количества участников может занять несколько минут.</div>
                @Html.Hidden("ModelStateErrors", ViewData.ModelState.Values.Select(v => v.Errors.Count).Sum())
                @Html.Raw(HttpUtility.HtmlDecode(Html.ValidationSummary().ToHtmlString()))
                @Html.AntiForgeryToken()
                @Html.EditorForModel()
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-mb">Импортировать</button>
                <button type="button" class="btn btn-mb" data-dismiss="modal">Закрыть</button>
            </div>
        }
    </div>
</div>