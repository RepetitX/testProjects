@model Int32?

@{
    var cls = ViewData.ModelMetadata.IsRequired
        ? ("required" + (ViewData.ModelMetadata.Model != null && (int)ViewData.ModelMetadata.Model > 0 ? " valid" : ""))
        : "";
}

@Html.TextBox("", (Model.HasValue) ? ViewData.TemplateInfo.FormattedModelValue : "", new { @class = "digits " + cls + " form-control input-sm", maxlength = "10" })