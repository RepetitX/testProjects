@model Repetit.Tasks.Task1.Domain.Entities.OrderItem
@using (Html.BeginForm("EditProduct", "Orders"))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(p => p.OrderID)
    @Html.HiddenFor(p=>p.OrderItemID)
    <div class="panel-body">
        <table width="80%">
            <tr>
                <td><label>Продукт:</label></td>
                <td id="product">
                    @Html.HiddenFor(p => p.ProductID)
                    @Html.DropDownList("ProductID")
                </td>
            </tr>
            <tr height="20"><td colspan="2">@Html.ValidationMessageFor(p=>p.ProductID)</td></tr>
        <tr><td><label>Кол-во:</label></td><td>@Html.TextBoxFor(p => p.Number, new {@class="form-control"})</td></tr>
        <tr height="20"><td colspan="2"></td></tr>
        <tr>
            <td colspan="2">
                <div class="text-center">
                    <button class="btn btn-info">Сохранить</button>
                </div>
            </td>
        </tr>
    </table>
   </div>
}
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>